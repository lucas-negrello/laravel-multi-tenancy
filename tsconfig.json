{
    "compilerOptions": {
        "target": "ES2024",
        "lib": ["ES2024", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "baseUrl": "./app",
        "paths": {
            "@/*": ["resources/js/*"]
        },
        "types": ["vite/client", "node"],
        "strict": true,
        "skipLibCheck": true,
        "allowJs": true,
        "checkJs": false,
        "isolatedModules": true,
        "noEmit": true,
        "useDefineForClassFields": true
    },
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.d.ts",
        "resources/ts/**/*.ts",
        "resources/ts/**/*.d.ts",
        "resources/**/*.blade.php",
        "vite.config.ts"
    ]
}
